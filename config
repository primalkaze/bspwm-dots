[module/weather]

type = custom/script

exec = curl wttr.in/?0?q?T 2>/dev/null | awk '/°(C|F)/ {printf $(NF-1) $NF}'
interval = 5000
label = %output%
format = <label>
format-padding = 1
format-prefix = "󰖕"
format-prefix-foreground = #aafaff

